# exchange_config.py
import ccxt

def get_exchange(exchange_id):
    exchanges = {
        'binance': {
            'apiKey': 'your_binance_api_key',
            'secret': 'your_binance_api_secret',
        },
        'kraken': {
            'apiKey': 'your_kraken_api_key',
            'secret': 'your_kraken_api_secret',
        },
        # Add more exchanges here
    }
    
    if exchange_id in exchanges:
        exchange = getattr(ccxt, exchange_id)()
        exchange.apiKey = exchanges[exchange_id]['apiKey']
        exchange.secret = exchanges[exchange_id]['secret']
        return exchange
    else:
        raise ValueError(f'Exchange {exchange_id} is not configured.')
