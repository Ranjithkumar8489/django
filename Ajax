<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                Account Balance
            </div>
            <div class="card-body">
                <h5 class="card-title">USD Balance: <span id="usd-balance">Loading...</span></h5>
                <h5 class="card-title">BTC Balance: <span id="btc-balance">Loading...</span></h5>
            </div>
        </div>
    </div>
    
    <script>
        function fetchBalance() {
            $.ajax({
                url: '{% url "get_balance" %}',
                method: 'GET',
                success: function(data) {
                    $('#usd-balance').text(data.usd); // Update USD balance
                    $('#btc-balance').text(data.btc); // Update BTC balance
                },
                error: function(error) {
                    console.error('Error fetching balance:', error);
                    $('#usd-balance').text('Error fetching balance');
                    $('#btc-balance').text('Error fetching balance');
                }
            });
        }

        $(document).ready(function() {
            fetchBalance(); // Fetch balance on page load
            setInterval(fetchBalance, 30000); // Refresh balance every 30 seconds
        });
    </script>
</body>
</html>
