# logs/models.py
from django.db import models
from django.utils import timezone

class LogEntry(models.Model):
    LOG_TYPE_CHOICES = [
        ('INFO', 'Info'),
        ('ERROR', 'Error'),
        ('TRADE', 'Trade'),
        # Add more log types as needed
    ]
    
    timestamp = models.DateTimeField(default=timezone.now)
    log_type = models.CharField(max_length=10, choices=LOG_TYPE_CHOICES)
    message = models.TextField()

    def __str__(self):
        return f"{self.timestamp} - {self.log_type} - {self.message}"

# logs/views.py
from django.shortcuts import render
from .models import LogEntry

def log_list(request):
    logs = LogEntry.objects.all().order_by('-timestamp')
    return render(request, 'logs/log_list.html', {'logs': logs})

def log_detail(request, log_id):
    log = LogEntry.objects.get(id=log_id)
    return render(request, 'logs/log_detail.html', {'log': log})

<!-- logs/templates/logs/log_list.html -->
<!DOCTYPE html>
<html>
<head>
    <title>Log List</title>
</head>
<body>
    <h1>Log List</h1>
    <table>
        <tr>
            <th>Timestamp</th>
            <th>Type</th>
            <th>Message</th>
        </tr>
        {% for log in logs %}
        <tr>
            <td>{{ log.timestamp }}</td>
            <td>{{ log.get_log_type_display }}</td>
            <td>{{ log.message }}</td>
        </tr>
        {% endfor %}
    </table>
</body>
</html>

<!-- logs/templates/logs/log_detail.html -->
<!DOCTYPE html>
<html>
<head>
    <title>Log Detail</title>
</head>
<body>
    <h1>Log Detail</h1>
    <p><strong>Timestamp:</strong> {{ log.timestamp }}</p>
    <p><strong>Type:</strong> {{ log.get_log_type_display }}</p>
    <p><strong>Message:</strong> {{ log.message }}</p>
</body>
</html>

# logs/urls.py
from django.urls import path
from . import views

urlpatterns = [
    path('logs/', views.log_list, name='log_list'),
    path('logs/<int:log_id>/', views.log_detail, name='log_detail'),
]
